<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.jack.bookshelf.widget.prefs.ATEPreferenceCategory android:title="书架设置">

        <com.jack.bookshelf.widget.prefs.ATESwitchPreference
            android:defaultValue="true"
            android:key="@string/pk_auto_refresh"
            android:summary="@string/ps_auto_refresh"
            android:title="@string/pt_auto_refresh" />

        <com.jack.bookshelf.widget.prefs.ATESwitchPreference
            android:defaultValue="false"
            android:key="@string/pk_auto_download"
            android:summary="@string/ps_auto_download"
            android:title="@string/pt_auto_download" />

        <com.jack.bookshelf.widget.prefs.ATESwitchPreference
            android:defaultValue="false"
            android:key="@string/pk_default_read"
            android:summary="@string/ps_default_read"
            android:title="@string/pt_default_read" />

        <com.jack.bookshelf.widget.prefs.ATESwitchPreference
            android:defaultValue="true"
            android:key="replaceEnableDefault"
            android:summary="@string/ps_replace"
            android:title="@string/pt_replace" />

        <com.jack.bookshelf.widget.prefs.ATESwitchPreference
            android:defaultValue="true"
            android:key="showAllFind"
            android:summary="@string/ps_show_all_find"
            android:title="@string/pt_show_all_find" />

        <Preference
            android:key="clearCache"
            android:summary="@string/ps_clear_cache"
            android:title="@string/pt_clear_cache" />

    </com.jack.bookshelf.widget.prefs.ATEPreferenceCategory>

    <com.jack.bookshelf.widget.prefs.ATEPreferenceCategory android:title="备份设置">

        <Preference
            android:key="webDavSetting"
            android:title="WebDav"
            android:summary="@string/ps_webdav_setting"/>

        <Preference
            android:key="backupPath"
            android:title="@string/backup_path" />

    </com.jack.bookshelf.widget.prefs.ATEPreferenceCategory>

    <com.jack.bookshelf.widget.prefs.ATEPreferenceCategory android:title="其它设置">

        <com.jack.bookshelf.widget.number.NumberPickerPreference
            android:defaultValue="16"
            android:key="@string/pk_threads_num"
            android:summary="@string/threads_num"
            android:title="@string/update_search_threads_num"
            app:MaxValue="1024"
            app:MinValue="1" />

        <com.jack.bookshelf.widget.number.NumberPickerPreference
            android:defaultValue="7"
            android:key="@string/pk_search_result_filter_grade"
            android:summary="@string/search_result_filter_grade_tip"
            android:title="@string/search_result_filter_grade"
            app:MaxValue="9"
            app:MinValue="0" />

        <com.jack.bookshelf.widget.number.NumberPickerPreference
            android:defaultValue="1122"
            android:key="webPort"
            android:summary="@string/web_port_summary"
            android:title="@string/web_port_title"
            app:MaxValue="60000"
            app:MinValue="1024" />

        <com.jack.bookshelf.widget.prefs.ATESwitchPreference
            android:defaultValue="false"
            android:key="upChangeSourceLastChapter"
            android:summary="@string/up_change_source_last_chapter_s"
            android:title="@string/up_change_source_last_chapter_t" />

        <com.jack.bookshelf.widget.prefs.ATESwitchPreference
            android:defaultValue="true"
            android:key="process_text_show_search"
            android:summary="@string/ps_process_text_show_search"
            android:title="@string/pt_process_text_show_search" />

    </com.jack.bookshelf.widget.prefs.ATEPreferenceCategory>

</PreferenceScreen>