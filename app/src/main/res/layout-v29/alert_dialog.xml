<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="@dimen/alert_dialog_width"
    android:background="@drawable/alert_dialog_background"
    android:paddingStart="@dimen/alert_dialog_radius"
    android:paddingEnd="@dimen/alert_dialog_radius"
    android:paddingTop="@dimen/alert_dialog_padding_top"
    android:paddingBottom="@dimen/alert_dialog_padding_bottom"
    android:orientation="vertical">
    <!-- 标题 -->
    <TextView
        android:id="@+id/tv_alert_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/alert_dialog_title_margin_bottom"
        android:gravity="start"
        android:textColor="@color/black"
        android:textSize="@dimen/alert_dialog_title_text_size"
        android:textStyle="bold"
        tools:text="精准转写"/>
    <!-- 信息 -->
    <TextView
        android:id="@+id/tv_alert_dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/alert_dialog_message_margin_bottom"
        android:gravity="start"
        android:textColor="@color/black"
        android:textSize="@dimen/alert_dialog_message_text_size"
        android:textStyle="bold"
        tools:text="将您的语言转换为文本信息。"/>
    <!-- 附加信息 -->
    <TextView
        android:id="@+id/tv_alert_dialog_append_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/alert_dialog_message_margin_bottom"
        android:gravity="start"
        android:textColor="@color/black"
        android:textSize="@dimen/alert_dialog_append_message_text_size"
        android:textStyle="bold"
        android:visibility="gone"
        tools:text="本服务需联网，收集帐号、设备、应用和语音信息。"
        tools:visibility="visible"/>
    <!-- 按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/alert_dialog_button_layout_height"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_alert_dialog_negative_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/alert_dialog_button_text_size"
            android:textStyle="bold"
            tools:text="取消"/>
        <!-- 分割线 -->
        <LinearLayout
            android:layout_width="@dimen/alert_dialog_button_divide_line_width"
            android:layout_height="match_parent"
            android:background="@color/black"/>
        <TextView
            android:id="@+id/tv_alert_dialog_positive_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/alert_dialog_button_text_size"
            android:textStyle="bold"
            tools:text="删除"/>
    </LinearLayout>
</LinearLayout>