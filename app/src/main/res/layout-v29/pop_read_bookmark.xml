    <!-- 标题 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <!-- 分割线 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageView
            android:id="@+id/iv_back_pop_more_setting_menu"
            android:layout_width="@dimen/action_bar_icon_height_and_width"
            android:layout_height="@dimen/action_bar_icon_height_and_width"
            android:layout_marginStart="@dimen/action_bar_padding_and_margin"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/tv_title_pop_more_setting_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/action_bar_padding_and_margin"
            android:text="@string/read_setting"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/action_bar_title_text_size"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/iv_back_pop_more_setting_menu"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <!-- 阅读设置 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:paddingStart="55dp"
        android:paddingEnd="55dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/content_padding"
            android:orientation="vertical">
            <!-- 显示设置 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/display_setting"
                style="@style/PaperTextStyleSettingTitle" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_display_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/setting_preference_margin_title"
                android:paddingTop="@dimen/setting_category_padding_up_and_bottom"
                android:paddingBottom="@dimen/setting_category_padding_up_and_bottom"
                android:paddingStart="@dimen/setting_preference_padding_left_and_right"
                android:paddingEnd="@dimen/setting_preference_padding_left_and_right"
                android:background="@drawable/shape_preference_category_background">
                <TextView
                    android:id="@+id/tv_screen_direction"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/setting_preference_layout_height"
                    android:gravity="center_vertical"
                    android:text="@string/screen_orientation"
                    style="@style/PaperTextStyleSettingPreference"
                    app:layout_constraintLeft_toLeftOf="@id/cl_display_setting"
                    app:layout_constraintRight_toRightOf="@id/cl_display_setting"
                    app:layout_constraintTop_toTopOf="@id/cl_display_setting" />
                <ImageView
                    android:id="@+id/iv_screen_direction"
                    android:layout_width="@dimen/setting_preference_layout_height"
                    android:layout_height="@dimen/setting_preference_layout_height"
                    android:src="@drawable/ic_next"
                    android:focusable="false"
                    android:clickable="false"
                    app:layout_constraintRight_toRightOf="@id/cl_display_setting"
                    app:layout_constraintTop_toTopOf="@id/cl_display_setting" />
                <TextView
                    android:id="@+id/tv_screen_direction_current"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/setting_preference_layout_height"
                    android:layout_marginEnd="@dimen/setting_preference_bind_number_margin_end"
                    android:gravity="center_vertical"
                    style="@style/PaperTextStyleSettingPreference"
                    android:focusable="false"
                    android:clickable="false"
                    app:layout_constraintRight_toRightOf="@id/cl_display_setting"
                    app:layout_constraintTop_toTopOf="@id/iv_screen_direction"
                    tools:text="跟随系统"/>
                <View
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/tv_screen_direction"
                    app:layout_constraintLeft_toLeftOf="@id/cl_display_setting" />
                <TextView
                    android:id="@+id/tv_keep_light_time"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/setting_preference_layout_height"
                    android:gravity="center_vertical"
                    android:text="@string/keep_light_time"
                    style="@style/PaperTextStyleSettingPreference"
                    app:layout_constraintLeft_toLeftOf="@id/cl_display_setting"
                    app:layout_constraintRight_toRightOf="@id/cl_display_setting"
                    app:layout_constraintTop_toBottomOf="@id/line1" />
                <ImageView
                    android:id="@+id/iv_keep_light_time"
                    android:layout_width="@dimen/setting_preference_layout_height"
                    android:layout_height="@dimen/setting_preference_layout_height"
                    android:src="@drawable/ic_next"
                    android:focusable="false"
                    android:clickable="false"
                    app:layout_constraintRight_toRightOf="@id/cl_display_setting"
                    app:layout_constraintTop_toBottomOf="@id/line1" />
                <TextView
                    android:id="@+id/tv_keep_light_time_num"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/setting_preference_layout_height"
                    android:layout_marginEnd="@dimen/setting_preference_bind_number_margin_end"
                    android:gravity="center_vertical"
                    style="@style/PaperTextStyleSettingPreference"
                    android:focusable="false"
                    android:clickable="false"
                    app:layout_constraintRight_toRightOf="@id/cl_display_setting"
                    app:layout_constraintTop_toTopOf="@id/iv_keep_light_time"
                    tools:text="常亮"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <!-- 操作设置 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/setting_preference_margin_title"
                android:text="@string/operation_setting"
                style="@style/PaperTextStyleSettingTitle" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_operation_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/setting_preference_margin_title"
                android:paddingTop="@dimen/setting_category_padding_up_and_bottom"
                android:paddingBottom="@dimen/setting_category_padding_up_and_bottom"
                android:paddingStart="@dimen/setting_preference_padding_left_and_right"
                android:paddingEnd="@dimen/setting_preference_padding_left_and_right"
                android:background="@drawable/shape_preference_category_background">
                <TextView
                    android:id="@+id/tv_disable_return_key"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/setting_preference_layout_height"
                    android:gravity="center_vertical"
                    android:text="@string/disable_return_key"
                    style="@style/PaperTextStyleSettingPreference"
                    app:layout_constraintLeft_toLeftOf="@id/cl_operation_setting"
                    app:layout_constraintTop_toTopOf="@id/cl_operation_setting"/>
                <com.jack.bookshelf.widget.PaperSwitch
                    android:id="@+id/sw_disable_return_key"
                    android:layout_width="@dimen/setting_preference_layout_height"
                    android:layout_height="@dimen/setting_preference_layout_height"
                    android:src="@drawable/ic_switch_unchecked"
                    app:layout_constraintRight_toRightOf="@id/cl_operation_setting"
                    app:layout_constraintTop_toTopOf="@id/cl_operation_setting" />
                <View
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/tv_disable_return_key"
                    app:layout_constraintLeft_toLeftOf="@id/cl_operation_setting" />
                <TextView
                    android:id="@+id/tv_click_open_page"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/setting_preference_layout_height"
                    android:gravity="center_vertical"
                    android:text="@string/click_open_page"
                    style="@style/PaperTextStyleSettingPreference"
                    app:layout_constraintLeft_toLeftOf="@id/cl_operation_setting"
                    app:layout_constraintTop_toTopOf="@id/line2"/>
                <com.jack.bookshelf.widget.PaperSwitch
                    android:id="@+id/sw_click_open_page"
                    android:layout_width="@dimen/setting_preference_layout_height"
                    android:layout_height="@dimen/setting_preference_layout_height"
                    android:src="@drawable/ic_switch_unchecked"
                    app:layout_constraintRight_toRightOf="@id/cl_operation_setting"
                    app:layout_constraintTop_toTopOf="@id/line2"/>
                <View
                    android:id="@+id/line3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/tv_click_open_page"
                    app:layout_constraintLeft_toLeftOf="@id/cl_operation_setting" />
                <TextView
                    android:id="@+id/tv_click_all_next_page"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/setting_preference_layout_height"
                    android:gravity="center_vertical"
                    android:text="@string/click_all_next_page"
                    style="@style/PaperTextStyleSettingPreference"
                    app:layout_constraintLeft_toLeftOf="@id/cl_operation_setting"
                    app:layout_constraintTop_toTopOf="@id/line3"/>
                <com.jack.bookshelf.widget.PaperSwitch
                    android:id="@+id/sw_click_all_next_page"
                    android:layout_width="@dimen/setting_preference_layout_height"
                    android:layout_height="@dimen/setting_preference_layout_height"
                    android:src="@drawable/ic_switch_unchecked"
                    app:layout_constraintRight_toRightOf="@id/cl_operation_setting"
                    app:layout_constraintTop_toTopOf="@id/line3"/>
                <View
                    android:id="@+id/line4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/tv_click_all_next_page"
                    app:layout_constraintLeft_toLeftOf="@id/cl_operation_setting" />
                <TextView
                    android:id="@+id/tv_volume_open_page"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/setting_preference_layout_height"
                    android:gravity="center_vertical"
                    android:text="@string/volume_open_page"
                    style="@style/PaperTextStyleSettingPreference"
                    app:layout_constraintLeft_toLeftOf="@id/cl_operation_setting"
                    app:layout_constraintTop_toTopOf="@id/line4"/>
                <com.jack.bookshelf.widget.PaperSwitch
                    android:id="@+id/sw_volume_open_page"
                    android:layout_width="@dimen/setting_preference_layout_height"
                    android:layout_height="@dimen/setting_preference_layout_height"
                    android:src="@drawable/ic_switch_unchecked"
                    app:layout_constraintRight_toRightOf="@id/cl_operation_setting"
                    app:layout_constraintTop_toTopOf="@id/line4"/>
                <View
                    android:id="@+id/line5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/tv_volume_open_page"
                    app:layout_constraintLeft_toLeftOf="@id/cl_operation_setting" />
                <TextView
                    android:id="@+id/tv_aloud_volume_page"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/setting_preference_layout_height"
                    android:gravity="center_vertical"
                    android:text="@string/aloud_volume_page"
                    style="@style/PaperTextStyleSettingPreference"
                    app:layout_constraintLeft_toLeftOf="@id/cl_operation_setting"
                    app:layout_constraintTop_toTopOf="@id/line5"/>
                <com.jack.bookshelf.widget.PaperSwitch
                    android:id="@+id/sw_aloud_volume_page"
                    android:layout_width="@dimen/setting_preference_layout_height"
                    android:layout_height="@dimen/setting_preference_layout_height"
                    android:src="@drawable/ic_switch_unchecked"
                    app:layout_constraintRight_toRightOf="@id/cl_operation_setting"
                    app:layout_constraintTop_toTopOf="@id/line5"/>
                <View
                    android:id="@+id/line6"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/tv_aloud_volume_page"
                    app:layout_constraintLeft_toLeftOf="@id/cl_operation_setting" />
                <TextView
                    android:id="@+id/tv_select_text"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/setting_preference_layout_height"
                    android:gravity="center_vertical"
                    android:text="@string/select_text"
                    style="@style/PaperTextStyleSettingPreference"
                    app:layout_constraintLeft_toLeftOf="@id/cl_operation_setting"
                    app:layout_constraintTop_toTopOf="@id/line6"/>
                <com.jack.bookshelf.widget.PaperSwitch
                    android:id="@+id/sw_select_text"
                    android:layout_width="@dimen/setting_preference_layout_height"
                    android:layout_height="@dimen/setting_preference_layout_height"
                    android:src="@drawable/ic_switch_unchecked"
                    app:layout_constraintRight_toRightOf="@id/cl_operation_setting"
                    app:layout_constraintTop_toTopOf="@id/line6"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>