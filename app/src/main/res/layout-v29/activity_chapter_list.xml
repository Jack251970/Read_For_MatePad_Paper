<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <!-- Toolbar & Title_VP -->
    <LinearLayout
        android:id="@+id/anchor_for_vp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- Custom ActionBar -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_bar_layout_height"
            android:paddingLeft="@dimen/action_bar_padding_and_margin"
            android:paddingRight="@dimen/action_bar_padding_and_margin">
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/action_bar_icon_height_and_width"
                android:layout_height="@dimen/action_bar_icon_height_and_width"
                android:contentDescription="返回"
                android:src="@drawable/ic_arrow_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/tv_book_title_chapter_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/action_bar_padding_and_margin"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/action_bar_title_text_size"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/iv_back"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="哑舍" />
            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="@dimen/action_bar_icon_height_and_width"
                android:layout_height="@dimen/action_bar_icon_height_and_width"
                android:contentDescription="搜索"
                android:src="@drawable/mpp_ic_search"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <androidx.appcompat.widget.SearchView
                android:id="@+id/searchView"
                android:layout_width="0dp"
                android:layout_height="@dimen/action_bar_icon_height_and_width"
                android:layout_marginLeft="@dimen/action_bar_padding_and_margin"
                android:layout_weight="1"
                android:background="@drawable/searchbar_background"
                android:imeOptions="actionSearch"
                android:visibility="gone"
                app:defaultQueryHint="@string/search"
                app:iconifiedByDefault="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/iv_back"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:queryBackground="@null"
                app:searchIcon="@null"
                app:showDividers="none"
                app:submitBackground="@null"
                tools:ignore="RtlHardcoded"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <!-- Title_VP -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_chapter_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chapter_list"
                    android:textColor="@color/md_black_1000"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="6dp" />
                <ImageView
                    android:id="@+id/iv_chapter_list_indicator"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:contentDescription="目录"
                    android:src="@drawable/viewpager_indicator"
                    android:visibility="invisible"
                    tools:visibility="visible" />
            </LinearLayout>
            <Space
                android:layout_width="50dp"
                android:layout_height="match_parent" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_bookmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bookmark"
                    android:textColor="@color/md_black_1000"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="6dp" />
                <ImageView
                    android:id="@+id/iv_bookmark_indicator"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:contentDescription="书签"
                    android:src="@drawable/viewpager_indicator"
                    android:visibility="invisible"
                    tools:visibility="visible" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!-- 目录/书签列表 -->
    <com.jack.bookshelf.widget.viewpager.ViewPager
        android:id="@+id/tab_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/anchor_for_vp" />
</RelativeLayout>