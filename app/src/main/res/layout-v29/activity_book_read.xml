<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_content"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!-- 阅读主界面 -->
    <com.jack.bookshelf.widget.page.PageView
        android:id="@+id/pageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        tools:visibility="gone"/>
    <!-- 自动翻页指示器 -->
    <com.jack.bookshelf.widget.seekbar.VerticalSeekBarWrapper
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        tools:ignore="RtlHardcoded">
        <com.jack.bookshelf.widget.seekbar.VerticalSeekBar
            android:id="@+id/pb_nextPage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="invisible"
            app:seekBarRotation="CW270" />
    </com.jack.bookshelf.widget.seekbar.VerticalSeekBarWrapper>
    <!-- 阅读长按光标 -->
    <ImageView
        android:id="@+id/cursor_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="左光标"
        android:src="@drawable/ic_cursor_left"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/cursor_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="右光标"
        android:src="@drawable/ic_cursor_right"
        android:visibility="invisible"/>
    <!-- 阅读长按菜单 -->
    <com.jack.bookshelf.view.popupwindow.ReadLongPressPop
        android:id="@+id/readLongPress"
        android:layout_width="190dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:visibility="invisible"/>
    <!-- 听书播放界面 -->
    <com.jack.bookshelf.view.popupwindow.MediaPlayerPop
        android:id="@+id/mediaPlayerPop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:visibility="gone" />
    <!-- 菜单 -->
    <FrameLayout
        android:id="@+id/fl_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        tools:visibility="visible">
        <!-- 全局点击范围 -->
        <View
            android:id="@+id/v_menu_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:clickable="true"
            android:focusable="true"
            tools:visibility="gone"/>
        <!-- 顶部菜单 -->
        <LinearLayout
            android:id="@+id/ll_menu_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:visibility="invisible"
            tools:visibility="visible">
            <!-- Custom ActionBar -->
            <LinearLayout
                android:id="@+id/appBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/action_bar_layout_height"
                    android:paddingLeft="@dimen/action_bar_padding_and_margin"
                    android:paddingRight="@dimen/action_bar_padding_and_margin"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_back_book_read"
                        android:layout_width="@dimen/action_bar_icon_height_and_width"
                        android:layout_height="@dimen/action_bar_icon_height_and_width"
                        android:gravity="center_vertical"
                        android:contentDescription="返回"
                        android:src="@drawable/ic_arrow_back"/>
                    <TextView
                        android:id="@+id/tv_book_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="15dp"
                        android:textSize="22sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:clickable="false"
                        android:focusable="false"
                        tools:text="哑舍"/>
                    <LinearLayout
                        android:id="@+id/appBar_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        tools:visibility="visible">
                        <ImageView
                            android:id="@+id/iv_set_text_chapter_regex"
                            android:layout_width="@dimen/action_bar_icon_height_and_width"
                            android:layout_height="@dimen/action_bar_icon_height_and_width"
                            android:layout_marginStart="@dimen/action_bar_padding_and_margin"
                            android:contentDescription="设置目录正则"
                            android:src="@drawable/ic_txt_chapter_rule"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/appBar_local"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        tools:visibility="visible">
                        <ImageView
                            android:id="@+id/iv_set_charset"
                            android:layout_width="@dimen/action_bar_icon_height_and_width"
                            android:layout_height="@dimen/action_bar_icon_height_and_width"
                            android:layout_marginStart="@dimen/action_bar_padding_and_margin"
                            android:contentDescription="设置编码"
                            android:src="@drawable/ic_translate"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/appBar_online"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:clickable="false"
                        android:focusable="false"
                        tools:visibility="gone">
                        <ImageView
                            android:id="@+id/iv_change_source"
                            android:layout_width="@dimen/action_bar_icon_height_and_width"
                            android:layout_height="@dimen/action_bar_icon_height_and_width"
                            android:layout_marginStart="@dimen/action_bar_padding_and_margin"
                            android:contentDescription="切换书源"
                            android:src="@drawable/ic_exchange"/>
                        <ImageView
                            android:id="@+id/iv_refresh"
                            android:layout_width="@dimen/action_bar_icon_height_and_width"
                            android:layout_height="@dimen/action_bar_icon_height_and_width"
                            android:layout_marginStart="@dimen/action_bar_padding_and_margin"
                            android:contentDescription="重新加载"
                            android:src="@drawable/ic_refresh_black"/>
                        <ImageView
                            android:id="@+id/iv_download_offline"
                            android:layout_width="@dimen/action_bar_icon_height_and_width"
                            android:layout_height="@dimen/action_bar_icon_height_and_width"
                            android:layout_marginStart="@dimen/action_bar_padding_and_margin"
                            android:contentDescription="离线下载"
                            android:src="@drawable/ic_download_line"/>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/iv_add_bookmark"
                        android:layout_width="@dimen/action_bar_icon_height_and_width"
                        android:layout_height="@dimen/action_bar_icon_height_and_width"
                        android:layout_marginStart="@dimen/action_bar_padding_and_margin"
                        android:contentDescription="添加书签"
                        android:src="@drawable/ic_bookmark"/>
                    <ImageView
                        android:id="@+id/iv_copy_text"
                        android:layout_width="@dimen/action_bar_icon_height_and_width"
                        android:layout_height="@dimen/action_bar_icon_height_and_width"
                        android:layout_marginStart="@dimen/action_bar_padding_and_margin"
                        android:contentDescription="拷贝内容"
                        android:src="@drawable/ic_copy"/>
                    <ImageView
                        android:id="@+id/iv_more_settings_book_read"
                        android:layout_width="@dimen/action_bar_icon_height_and_width"
                        android:layout_height="@dimen/action_bar_icon_height_and_width"
                        android:layout_marginStart="@dimen/action_bar_padding_and_margin"
                        android:contentDescription="更多选项"
                        android:src="@drawable/ic_more_settings"/>
                </LinearLayout>
                <!-- 基础信息栏 -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_chapter_name_book_read"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/content_padding"
                    android:paddingRight="@dimen/content_padding"
                    android:layout_marginBottom="6dp">
                    <TextView
                        android:id="@+id/tv_chapter_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:singleLine="true"
                        android:textColor="@color/tv_text_default"
                        android:clickable="false"
                        android:focusable="false"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/login" />
                    <com.jack.bookshelf.widget.views.ATEAccentBgTextView
                        android:id="@+id/login"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:padding="6dp"
                        android:visibility="gone"
                        android:text="@string/login"
                        android:gravity="center"
                        android:clickable="false"
                        android:focusable="false"
                        app:layout_constraintRight_toLeftOf="@+id/pay"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />
                    <com.jack.bookshelf.widget.views.ATEAccentBgTextView
                        android:id="@+id/pay"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:padding="6dp"
                        android:visibility="gone"
                        android:text="@string/chapter_pay"
                        android:gravity="center"
                        android:clickable="false"
                        android:focusable="false"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
            <!-- 分割线 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"/>
        </LinearLayout>
        <!-- 底部主菜单 -->
        <com.jack.bookshelf.view.popupwindow.ReadBottomMenu
            android:id="@+id/read_menu_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/content_margin_left_and_right"
            android:layout_marginEnd="@dimen/content_margin_left_and_right"
            android:layout_marginBottom="-1dp"
            android:visibility="invisible"/>
        <!-- 显示设置菜单 -->
        <com.jack.bookshelf.view.popupwindow.ReadInterfacePop
            android:id="@+id/readInterfacePop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/content_margin_left_and_right"
            android:layout_marginEnd="@dimen/content_margin_left_and_right"
            android:layout_marginBottom="-1dp"
            android:visibility="invisible"/>
        <!-- 间距设置菜单 -->
        <com.jack.bookshelf.view.popupwindow.ReadAdjustMarginPop
            android:id="@+id/readAdjustMarginPop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/content_margin_left_and_right"
            android:layout_marginEnd="@dimen/content_margin_left_and_right"
            android:layout_marginBottom="-1dp"
            android:paddingBottom="100dp"
            android:visibility="invisible"
            tools:visibility="visible"/>
        <!-- 更多设置菜单 -->
        <com.jack.bookshelf.view.popupwindow.MoreSettingPop
            android:id="@+id/moreSettingPop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginStart="@dimen/content_margin_left_and_right"
            android:visibility="invisible" />
        <!-- 目录菜单 -->
        <com.jack.bookshelf.view.popupwindow.ReadChapterBookmarkPop
            android:id="@+id/chapterBookmarkPop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/content_margin_left_and_right"
            android:visibility="invisible" >
        </com.jack.bookshelf.view.popupwindow.ReadChapterBookmarkPop>
    </FrameLayout>
</FrameLayout>