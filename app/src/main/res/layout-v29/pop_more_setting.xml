    <!-- 菜单选项 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="25dp"
        android:paddingBottom="15dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:orientation="vertical">
            <!-- 更新设置 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/setting_preference_margin_title"
                android:text="@string/operation_setting"
                style="@style/PaperTextStyleSettingTitle" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_update_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/setting_preference_margin_title"
                android:paddingTop="@dimen/setting_category_padding_up_and_bottom"
                android:paddingBottom="@dimen/setting_category_padding_up_and_bottom"
                android:paddingStart="@dimen/setting_preference_padding_left_and_right"
                android:paddingEnd="@dimen/setting_preference_padding_left_and_right"
                android:background="@drawable/shape_preference_category_background">
                <TextView
                    android:id="@+id/tv_auto_update"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/setting_preference_layout_height"
                    android:gravity="center_vertical"
                    android:text="@string/disable_return_key"
                    style="@style/PaperTextStyleSettingPreference"
                    app:layout_constraintLeft_toLeftOf="@id/cl_update_setting"
                    app:layout_constraintTop_toTopOf="@id/cl_update_setting"/>
                <com.jack.bookshelf.widget.PaperSwitch
                    android:id="@+id/sw_disable_return_key"
                    android:layout_width="@dimen/setting_preference_layout_height"
                    android:layout_height="@dimen/setting_preference_layout_height"
                    android:src="@drawable/ic_switch_unchecked"
                    app:layout_constraintRight_toRightOf="@id/cl_update_setting"
                    app:layout_constraintTop_toTopOf="@id/cl_update_setting" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:id="@+id/ll_screen_direction"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/screen_direction"
                    style="@style/PaperTextStylePopReadMenuMoreSetting"/>
                <TextView
                    android:id="@+id/tv_screen_direction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/screen_unspecified"
                    style="@style/PaperTextStylePopReadMenuMoreSetting"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/llScreenTimeOut"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/keep_light_time"
                        style="@style/PaperTextStylePopReadMenuMoreSetting"/>
                    <TextView
                        android:id="@+id/tv_screen_time_out"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        style="@style/PaperTextStylePopReadMenuMoreSetting"
                        tools:text="常亮"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--<com.jack.bookshelf.widget.views.ATESwitch
                    android:id="@+id/sw_disable_return_key"
