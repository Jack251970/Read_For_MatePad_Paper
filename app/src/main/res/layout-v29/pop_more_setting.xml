                    android:layout_height="wrap_content"
                    android:paddingTop="18dp"
                    android:paddingBottom="18dp"
                    android:text="@string/disable_return_key"
                    style="@style/PaperTextStylePopReadMenuMoreSetting"/>-->
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.jack.bookshelf.widget.views.ATESwitch
                    android:id="@+id/sb_click"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="18dp"
                    android:paddingBottom="18dp"
                    android:text="@string/click_open_page"
                    style="@style/PaperTextStylePopReadMenuMoreSetting" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.jack.bookshelf.widget.views.ATESwitch
                    android:id="@+id/sb_click_all_next"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="18dp"
                    android:paddingBottom="18dp"
                    android:text="@string/click_all_next_page"
                    style="@style/PaperTextStylePopReadMenuMoreSetting"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.jack.bookshelf.widget.views.ATESwitch
                    android:id="@+id/sw_volume_next_page"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="18dp"
                    android:paddingBottom="18dp"
                    android:text="@string/volume_open_page"
                    style="@style/PaperTextStylePopReadMenuMoreSetting"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black" />
            </LinearLayout>
