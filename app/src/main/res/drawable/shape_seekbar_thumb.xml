<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape
            android:shape="oval"
            android:useLevel="false">
            <size
                android:height="18dp"
                android:width="18dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/black"/>
            <solid
                android:color="@color/white"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape
            android:shape="oval"
            android:useLevel="false">
            <size
                android:height="18dp"
                android:width="18dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/black"/>
            <solid
                android:color="@color/white"/>
        </shape>
    </item>
    <item>
        <shape
            android:shape="oval"
            android:useLevel="false">
            <size
                android:height="18dp"
                android:width="18dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/black"/>
            <solid
                android:color="@color/white"/>
        </shape>
    </item>
</selector>
