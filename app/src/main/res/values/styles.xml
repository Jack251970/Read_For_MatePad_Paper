<resources >
    <!-- Base Application Theme -->
    <style name="Base.AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:windowAnimationStyle">@style/NoneAnimation</item>
    </style>

    <!-- Base Animation Theme -->
    <style name="NoneAnimation">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>

    <!-- Base Animation Theme -->
    <style name="PaperTextBaseStyle">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Primary Activity Theme -->
    <style name="CAppTheme" parent="Base.AppTheme">
    </style>

    <!-- Welcome Activity Theme (No Title) -->
    <style name="CAppWelcomeTheme" parent="Base.AppTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- MatepadPaper Dialog Theme -->
    <style name="PaperAlertDialogTheme" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/NoneAnimation</item>
        <item name="cornerRadius">@dimen/dialog_radius</item>
    </style>

    <!-- MatepadPaper ToolBar Theme -->
    <style name="PaperToolbarTheme" parent="Base.Widget.AppCompat.Toolbar">
        <item name="actionBarItemBackground">@android:color/transparent</item>
    </style>

    <!-- MatePad Paper Text Button Theme -->
    <style name="PaperTextButton" parent="PaperTextBaseStyle">
        <item name="android:background">@drawable/shape_textview_button_background</item>
        <item name="android:padding">@dimen/text_view_button_padding</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- MatePad Paper Dialog Fragment Theme -->
    <style name="PaperDialogFragment" parent="@android:style/Theme.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@style/NoneAnimation</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="cornerRadius">@dimen/dialog_radius</item>
    </style>

    <!-- Pop Menu Text Style -->
    <style name="PaperTextStylePopReadMenu" parent="PaperTextBaseStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Pop Menu More Setting Text Style -->
    <style name="PaperTextStylePopReadMenuMoreSetting" parent="PaperTextBaseStyle">
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Service Activity Theme -->
    <style name="Activity.Permission" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowTranslucentStatus" >true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <!-- Setting Activity Preference Text Style -->
    <style name="PaperTextStyleSettingPreference" parent="PaperTextBaseStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Setting Activity Preference Bind TextView Style -->
    <style name="PaperTextStyleSettingBindTvPreference" parent="PaperTextBaseStyle">
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Setting Activity Title Text Style -->
    <style name="PaperTextStyleSettingTitle" parent="PaperTextBaseStyle">
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Main Activity Left Drawer Text Style -->
    <style name="PaperTextStyleMainLeftDrawer" parent="PaperTextBaseStyle">
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Main Activity Book Category Text Style -->
    <style name="PaperTextStyleMainBookCategory" parent="PaperTextBaseStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Action Bar Text Text Style -->
    <style name="PaperTextStyleActionBarText" parent="PaperTextBaseStyle">
        <item name="android:textSize">@dimen/action_bar_title_text_size</item>
    </style>
</resources>