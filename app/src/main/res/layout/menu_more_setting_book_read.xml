<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:background="@drawable/shape_more_setting_menu_background"
    android:orientation="vertical"
    tools:ignore="ContentDescription, UseCompoundDrawables">
    <LinearLayout
        android:id="@+id/ll_more_setting_menu_book_read_online1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">
        <LinearLayout
            android:id="@+id/ll_disable_book_source_online"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/more_setting_menu_iv_width_and_height"
                android:layout_height="@dimen/more_setting_menu_iv_width_and_height"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/item_more_setting_menu_iv_margin_end"
                android:padding="1.5dp"
                android:src="@drawable/ic_disable" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/disable_book_source" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"/>
        <LinearLayout
            android:id="@+id/ll_edit_book_source_online"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/more_setting_menu_iv_width_and_height"
                android:layout_height="@dimen/more_setting_menu_iv_width_and_height"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/item_more_setting_menu_iv_margin_end"
                android:src="@drawable/ic_edit" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/edit_book_source" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_replace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/more_setting_menu_iv_width_and_height"
            android:layout_height="@dimen/more_setting_menu_iv_width_and_height"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/item_more_setting_menu_iv_margin_end"
            android:src="@drawable/ic_find_replace"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="6dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/replace_rule_title" />
        <com.jack.bookshelf.widget.onoff.checkbox.RectCheckBox
            android:id="@+id/checkbox_replace"
            android:layout_width="@dimen/more_setting_menu_cb_width_and_height"
            android:layout_height="@dimen/more_setting_menu_cb_width_and_height"
            android:layout_marginEnd="6dp"
            android:layout_gravity="center_vertical"
            android:clickable="false"
            android:focusable="false"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"/>
    <LinearLayout
        android:id="@+id/ll_edit_replace_rule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/more_setting_menu_iv_width_and_height"
            android:layout_height="@dimen/more_setting_menu_iv_width_and_height"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/item_more_setting_menu_iv_margin_end"
            android:src="@drawable/ic_edit" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="6dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/edit_replace_rule" />
        <Space
            android:layout_width="48sp"
            android:layout_height="0dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"/>
    <LinearLayout
        android:id="@+id/ll_light_novel_paragraph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/more_setting_menu_iv_width_and_height"
            android:layout_height="@dimen/more_setting_menu_iv_width_and_height"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/item_more_setting_menu_iv_margin_end"
            android:src="@drawable/ic_light_novel_paragraph"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="6dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/light_novel_paragraph" />
        <com.jack.bookshelf.widget.onoff.checkbox.RectCheckBox
            android:id="@+id/checkbox_light_novel_paragraph"
            android:layout_width="@dimen/more_setting_menu_cb_width_and_height"
            android:layout_height="@dimen/more_setting_menu_cb_width_and_height"
            android:layout_marginEnd="6dp"
            android:layout_gravity="center_vertical"
            android:clickable="false"
            android:focusable="false"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"/>
    <LinearLayout
        android:id="@+id/ll_update_chapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/more_setting_menu_iv_width_and_height"
            android:layout_height="@dimen/more_setting_menu_iv_width_and_height"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/item_more_setting_menu_iv_margin_end"
            android:src="@drawable/ic_update"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="6dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/update_chapter" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_more_setting_menu_book_read_online2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"/>
        <LinearLayout
            android:id="@+id/ll_open_browser_online"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/more_setting_menu_iv_width_and_height"
                android:layout_height="@dimen/more_setting_menu_iv_width_and_height"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/item_more_setting_menu_iv_margin_end"
                android:src="@drawable/ic_web"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/open_browser" />
            <Space
                android:layout_width="30sp"
                android:layout_height="0dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>