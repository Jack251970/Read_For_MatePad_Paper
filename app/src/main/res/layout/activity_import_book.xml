<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:ignore="ContentDescription, UseCompoundDrawables"
    tools:context="com.jack.bookshelf.view.activity.ImportBookActivity">
    <!-- 整体分块 -->
    <View
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_layout_height"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/vp_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/action_bar"/>
    <View
        android:id="@+id/file_system_btn_add_book"
        android:layout_width="0dp"
        android:layout_height="@dimen/action_bar_layout_height"
        android:layout_marginStart="@dimen/content_margin_left_and_right"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/gl_center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <View
        android:id="@+id/file_system_cb_selected_all"
        android:layout_width="0dp"
        android:layout_height="@dimen/action_bar_layout_height"
        android:layout_marginEnd="@dimen/content_margin_left_and_right"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/gl_center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <!-- 顶部栏 -->
    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/action_bar_icon_height_and_width"
        android:layout_height="@dimen/action_bar_icon_height_and_width"
        android:layout_marginStart="@dimen/action_bar_padding_and_margin"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintLeft_toLeftOf="@id/action_bar"
        app:layout_constraintTop_toTopOf="@id/action_bar"
        app:layout_constraintBottom_toBottomOf="@id/action_bar"/>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/action_bar_padding_and_margin"
        android:text="@string/import_local_book"
        style="@style/PaperTextStyleActionBarText"
        app:layout_constraintLeft_toRightOf="@id/iv_back"
        app:layout_constraintTop_toTopOf="@id/action_bar"
        app:layout_constraintBottom_toBottomOf="@id/action_bar"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_center_horizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>
    <TextView
        android:id="@+id/tv_local_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:padding="15dp"
        android:text="@string/local_directory"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="@id/gl_center_horizontal"
        app:layout_constraintTop_toTopOf="@id/vp_title"
        app:layout_constraintBottom_toBottomOf="@id/vp_title"/>
    <ImageView
        android:id="@+id/iv_local_book_indicator"
        android:layout_width="64sp"
        android:layout_height="2dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/shape_viewpager_indicator"
        android:focusable="false"
        android:clickable="false"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/vp_title"
        app:layout_constraintLeft_toLeftOf="@id/tv_local_book"
        app:layout_constraintRight_toRightOf="@id/tv_local_book"/>
    <TextView
        android:id="@+id/tv_smart_import"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:padding="15dp"
        android:text="@string/smart_import"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/gl_center_horizontal"
        app:layout_constraintTop_toTopOf="@id/vp_title"
        app:layout_constraintBottom_toBottomOf="@id/vp_title"/>
    <ImageView
        android:id="@+id/iv_smart_import_indicator"
        android:layout_width="64sp"
        android:layout_height="2dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/shape_viewpager_indicator"
        android:focusable="false"
        android:clickable="false"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/tv_smart_import"
        app:layout_constraintLeft_toLeftOf="@id/tv_smart_import"
        app:layout_constraintRight_toRightOf="@id/tv_smart_import"
        tools:visibility="visible"/>
    <!-- 按钮内容 -->
    <ImageView
        android:id="@+id/iv_file_system_btn_add_book"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="2dp"
        android:src="@drawable/ic_add_to_bookshelf_unable"
        app:layout_constraintLeft_toLeftOf="@id/tv_file_system_btn_add_book"
        app:layout_constraintRight_toRightOf="@id/tv_file_system_btn_add_book"
        app:layout_constraintBottom_toTopOf="@id/tv_file_system_btn_add_book"/>
    <TextView
        android:id="@+id/tv_file_system_btn_add_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/add_to_shelf"
        android:textColor="@color/text_light"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/file_system_btn_add_book"
        app:layout_constraintLeft_toLeftOf="@id/file_system_btn_add_book"
        app:layout_constraintRight_toRightOf="@id/file_system_btn_add_book"/>
    <ImageView
        android:id="@+id/iv_file_system_cb_selected_all"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_select_all"
        app:layout_constraintLeft_toLeftOf="@id/tv_file_system_cb_selected_all"
        app:layout_constraintRight_toRightOf="@id/tv_file_system_cb_selected_all"
        app:layout_constraintBottom_toTopOf="@id/tv_file_system_cb_selected_all"/>
    <TextView
        android:id="@+id/tv_file_system_cb_selected_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/select_all"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/file_system_cb_selected_all"
        app:layout_constraintLeft_toLeftOf="@id/file_system_cb_selected_all"
        app:layout_constraintRight_toRightOf="@id/file_system_cb_selected_all"/>
    <!-- 中间内容 -->
    <com.jack.bookshelf.widget.viewpager.PaperViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/content_margin_left_and_right"
        android:layout_marginRight="@dimen/content_margin_left_and_right"
        app:layout_constraintTop_toBottomOf="@id/vp_title"
        app:layout_constraintBottom_toTopOf="@id/file_system_btn_add_book"/>
</androidx.constraintlayout.widget.ConstraintLayout>