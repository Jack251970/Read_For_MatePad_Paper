<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    tools:ignore="ContentDescription" >
    <com.jack.bookshelf.widget.onoff.checkbox.RectCheckBox
        android:id="@+id/cb_book_source"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textStyle="bold"
        tools:text="风雨小说（《精选书源》）"/>
    <ImageView
        android:id="@+id/iv_edit_source"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:padding="8dp"
        android:src="@drawable/ic_edit"/>
    <ImageView
        android:id="@+id/iv_top_source"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:padding="8dp"
        android:src="@drawable/ic_top_source" />
    <ImageView
        android:id="@+id/iv_del_source"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:padding="8dp"
        android:src="@drawable/ic_clear"/>
</LinearLayout>