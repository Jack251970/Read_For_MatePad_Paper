<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:ignore="ContentDescription, UseCompoundDrawables"
    tools:context="com.jack.bookshelf.view.activity.BookSourceActivity">
    <View
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_layout_height"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/action_bar_icon_height_and_width"
        android:layout_height="@dimen/action_bar_icon_height_and_width"
        android:layout_marginStart="@dimen/action_bar_padding_and_margin"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintLeft_toLeftOf="@id/action_bar"
        app:layout_constraintTop_toTopOf="@id/action_bar"
        app:layout_constraintBottom_toBottomOf="@id/action_bar"/>
    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="0dp"
        android:layout_height="@dimen/action_bar_icon_height_and_width"
        android:layout_marginStart="@dimen/action_bar_padding_and_margin"
        android:layout_marginEnd="@dimen/action_bar_padding_and_margin"
        android:background="@drawable/shape_searchbar_background"
        android:imeOptions="actionSearch"
        app:iconifiedByDefault="false"
        app:searchIcon="@null"
        app:defaultQueryHint="@string/search"
        app:showDividers="none"
        app:queryBackground="@null"
        app:submitBackground="@null"
        app:layout_constraintTop_toTopOf="@id/action_bar"
        app:layout_constraintBottom_toBottomOf="@id/action_bar"
        app:layout_constraintLeft_toRightOf="@id/iv_back"
        app:layout_constraintRight_toLeftOf="@id/iv_quick_search_book_source"/>
    <ImageView
        android:id="@+id/iv_quick_search_book_source"
        android:layout_width="@dimen/action_bar_icon_height_and_width"
        android:layout_height="@dimen/action_bar_icon_height_and_width"
        android:layout_marginEnd="@dimen/action_bar_padding_and_margin"
        android:src="@drawable/ic_search"
        app:layout_constraintTop_toTopOf="@id/action_bar"
        app:layout_constraintBottom_toBottomOf="@id/action_bar"
        app:layout_constraintRight_toLeftOf="@id/iv_select_all_book_source"/>
    <ImageView
        android:id="@+id/iv_select_all_book_source"
        android:layout_width="@dimen/action_bar_icon_height_and_width"
        android:layout_height="@dimen/action_bar_icon_height_and_width"
        android:layout_marginEnd="@dimen/action_bar_padding_and_margin"
        android:src="@drawable/ic_select_all"
        app:layout_constraintTop_toTopOf="@id/action_bar"
        app:layout_constraintBottom_toBottomOf="@id/action_bar"
        app:layout_constraintRight_toLeftOf="@id/iv_up_group_book_source"/>
    <ImageView
        android:id="@+id/iv_up_group_book_source"
        android:layout_width="@dimen/action_bar_icon_height_and_width"
        android:layout_height="@dimen/action_bar_icon_height_and_width"
        android:layout_marginEnd="@dimen/action_bar_padding_and_margin"
        android:src="@drawable/ic_groups"
        app:layout_constraintTop_toTopOf="@id/action_bar"
        app:layout_constraintBottom_toBottomOf="@id/action_bar"
        app:layout_constraintRight_toLeftOf="@id/iv_more_settings_book_source"/>
    <ImageView
        android:id="@+id/iv_more_settings_book_source"
        android:layout_width="@dimen/action_bar_icon_height_and_width"
        android:layout_height="@dimen/action_bar_icon_height_and_width"
        android:layout_marginEnd="@dimen/action_bar_padding_and_margin"
        android:src="@drawable/ic_more_settings"
        app:layout_constraintTop_toTopOf="@id/action_bar"
        app:layout_constraintBottom_toBottomOf="@id/action_bar"
        app:layout_constraintRight_toRightOf="@id/action_bar"/>
    <com.jack.bookshelf.widget.recycler.scroller.FastScrollRecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="@dimen/content_padding"
        app:layout_constraintTop_toBottomOf="@id/action_bar"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>