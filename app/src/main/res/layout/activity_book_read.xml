<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--阅读页面-->
    <com.jack.bookshelf.widget.page.PageView
        android:id="@+id/pageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        tools:visibility="gone" />

    <com.jack.bookshelf.widget.seekbar.VerticalSeekBarWrapper
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        tools:ignore="RtlHardcoded">

        <com.jack.bookshelf.widget.seekbar.VerticalSeekBar
            android:id="@+id/pb_nextPage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="invisible"
            app:seekBarRotation="CW270" />

    </com.jack.bookshelf.widget.seekbar.VerticalSeekBarWrapper>

    <ImageView
        android:id="@+id/cursor_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:src="@drawable/ic_cursor_left"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/cursor_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:src="@drawable/ic_cursor_right"
        android:visibility="invisible" />

    <com.jack.bookshelf.view.popupwindow.ReadLongPressPop
        android:id="@+id/readLongPress"
        android:layout_width="190dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:visibility="invisible" />

    <com.jack.bookshelf.view.popupwindow.MediaPlayerPop
        android:id="@+id/mediaPlayerPop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/fl_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

        <View
            android:id="@+id/v_menu_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:clickable="true"
            android:focusable="true" />

        <LinearLayout
            android:id="@+id/ll_menu_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible">

            <LinearLayout
                android:id="@+id/ll_ISB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:orientation="vertical">

                <com.google.android.material.appbar.AppBarLayout
                    android:id="@+id/appBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="?attr/actionBarStyle">

                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:background="?attr/colorPrimary"
                        app:popupTheme="@style/AppTheme.PopupOverlay" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_chapter_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:singleLine="true"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@+id/login" />

                        <com.jack.bookshelf.widget.views.ATEAccentBgTextView
                            android:id="@+id/login"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:padding="6dp"
                            android:visibility="gone"
                            android:text="@string/login"
                            android:gravity="center"
                            app:layout_constraintRight_toLeftOf="@+id/pay"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <com.jack.bookshelf.widget.views.ATEAccentBgTextView
                            android:id="@+id/pay"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:padding="6dp"
                            android:visibility="gone"
                            android:text="@string/chapter_pay"
                            android:gravity="center"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.appbar.AppBarLayout>

            </LinearLayout>

            <View style="@style/Style.Shadow.Top" />
        </LinearLayout>

        <com.jack.bookshelf.view.popupwindow.ReadBottomMenu
            android:id="@+id/read_menu_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:visibility="invisible" />

        <com.jack.bookshelf.view.popupwindow.ReadInterfacePop
            android:id="@+id/readInterfacePop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:visibility="invisible" />

        <com.jack.bookshelf.view.popupwindow.MoreSettingPop
            android:id="@+id/moreSettingPop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:visibility="invisible" />

        <com.jack.bookshelf.view.popupwindow.ReadAdjustMarginPop
            android:id="@+id/readAdjustMarginPop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:visibility="invisible" />

    </FrameLayout>

</FrameLayout>