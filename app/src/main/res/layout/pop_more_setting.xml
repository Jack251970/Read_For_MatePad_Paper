<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:ignore="RtlSymmetry">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@color/background_menu">

        <View
            android:id="@+id/vw_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/background_menu"
                    android:orientation="vertical">

                    <!--参数调节小标题-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/background_menu"
                        android:orientation="vertical"
                        android:paddingStart="18dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">
                        <TextView
                            android:id="@+id/tv_parameter_adjust"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/parameter_adjust"
                            android:textColor="@color/tv_text_default"
                            android:textSize="14sp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:background="@color/background_menu"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">

                        <LinearLayout
                            android:id="@+id/ll_tts_SpeechRate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:text="@string/read_aloud_speed"
                                android:textColor="@color/tv_text_default"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="7dp"
                                android:layout_marginRight="7dp"
                                android:text="@string/flow_sys"
                                android:textColor="@color/tv_text_default"
                                android:textSize="14sp" />

                            <com.jack.bookshelf.widget.check_box.SmoothCheckBox
                                android:id="@+id/scb_tts_follow_sys"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_gravity="center_vertical"
                                android:clickable="false"
                                android:contentDescription="@string/flow_sys"
                                app:duration="150" />
                        </LinearLayout>

                        <com.jack.bookshelf.widget.views.PaperSeekBar
                            android:id="@+id/hpb_tts_SpeechRate"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:max="95" />

                    </LinearLayout>

                    <!--分割线-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="8dp"
                            android:layout_height="0.8dp"
                            android:background="@color/background_menu" />
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="0.8dp"
                            android:background="@color/btn_bg_press" />
                        <View
                            android:layout_width="8dp"
                            android:layout_height="0.8dp"
                            android:background="@color/background_menu" />
                    </LinearLayout>

                    <!--使下一个调节旋钮美观-->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:background="@color/background_menu" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/background_menu"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:text="@string/auto_next_page_speed"
                                android:textColor="@color/tv_text_default"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_auto_page"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="%dS"
                                android:textColor="@color/tv_text_default"
                                android:textSize="14sp"
                                tools:ignore="HardcodedText" />

                        </LinearLayout>

                        <com.jack.bookshelf.widget.views.PaperSeekBar
                            android:id="@+id/hpb_click"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:max="180" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/background_menu"
                        android:orientation="vertical"
                        android:paddingStart="18dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/screen_display"
                            android:textColor="@color/tv_text_default"
                            android:textSize="14sp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_screen_direction"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:background="@color/background_menu"
                        android:orientation="horizontal"
                        android:paddingLeft="18dp"
                        android:paddingRight="18dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:textColor="@color/menu_color_default"
                            android:text="@string/screen_direction" />

                        <TextView
                            android:id="@+id/tv_screen_direction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/menu_color_default"
                            android:text="@string/screen_unspecified" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="8dp"
                            android:layout_height="0.8dp"
                            android:background="@color/background_menu" />
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="0.8dp"
                            android:background="@color/btn_bg_press" />
                        <View
                            android:layout_width="8dp"
                            android:layout_height="0.8dp"
                            android:background="@color/background_menu" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/background_menu"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/llScreenTimeOut"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:background="@color/background_menu"
                        android:orientation="horizontal"
                        android:paddingLeft="18dp"
                        android:paddingRight="18dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:textColor="@color/menu_color_default"
                            android:text="@string/keep_light" />

                        <TextView
                            android:id="@+id/tv_screen_time_out"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/menu_color_default"
                            android:text="@string/keep_light" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="8dp"
                            android:layout_height="0.8dp"
                            android:background="@color/background_menu" />
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="0.8dp"
                            android:background="@color/btn_bg_press" />
                        <View
                            android:layout_width="8dp"
                            android:layout_height="0.8dp"
                            android:background="@color/background_menu" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_hideStatusBar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/background_menu"
                    android:orientation="vertical">

                    <com.jack.bookshelf.widget.views.ATESwitch
                        android:id="@+id/sb_hideStatusBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="18dp"
                        android:textColor="@color/menu_color_default"
                        android:text="@string/pt_hide_status_bar" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="8dp"
                            android:layout_height="0.8dp"
                            android:background="@color/background_menu" />
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="0.8dp"
                            android:background="@color/btn_bg_press" />
                        <View
                            android:layout_width="8dp"
                            android:layout_height="0.8dp"
                            android:background="@color/background_menu" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_to_lh"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/background_menu"
                    android:orientation="vertical">

                    <com.jack.bookshelf.widget.views.ATESwitch
                        android:id="@+id/sb_to_lh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="18dp"
                        android:textColor="@color/menu_color_default"
                        android:text="@string/to_lh" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="8dp"
                            android:layout_height="0.8dp"
                            android:background="@color/background_menu" />
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="0.8dp"
                            android:background="@color/btn_bg_press" />
                        <View
                            android:layout_width="8dp"
                            android:layout_height="0.8dp"
                            android:background="@color/background_menu" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_hideNavigationBar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/background_menu"
                    android:orientation="vertical">

                    <com.jack.bookshelf.widget.views.ATESwitch
                        android:id="@+id/sb_hideNavigationBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="18dp"
                        android:textColor="@color/menu_color_default"
                        android:text="@string/pt_hide_navigation_bar" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="8dp"
                            android:layout_height="0.8dp"
                            android:background="@color/background_menu" />
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="0.8dp"
                            android:background="@color/btn_bg_press" />
                        <View
                            android:layout_width="8dp"
                            android:layout_height="0.8dp"
                            android:background="@color/background_menu" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llNavigationBarColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/background_menu"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:background="@color/background_menu"
                        android:orientation="horizontal"
                        android:paddingLeft="18dp"
                        android:paddingRight="18dp">

                        <TextView
                            android:id="@+id/reNavBarColor"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:textColor="@color/menu_color_default"
                            android:text="@string/re_navigation_bar_color" />

                        <TextView
                            android:id="@+id/reNavBarColor_val"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/black"
                            android:text="@string/black" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/background_menu"
                    android:orientation="vertical"
                    android:paddingStart="18dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/interface_interact"
                        android:textColor="@color/tv_text_default"
                        android:textSize="14sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_disable_return_key"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/background_menu"
                    android:orientation="vertical">

                    <com.jack.bookshelf.widget.views.ATESwitch
                        android:id="@+id/sw_disable_return_key"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="18dp"
                        android:textColor="@color/menu_color_default"
                        android:text="@string/disable_return_key" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="8dp"
                            android:layout_height="0.8dp"
                            android:background="@color/background_menu" />
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="0.8dp"
                            android:background="@color/btn_bg_press" />
                        <View
                            android:layout_width="8dp"
                            android:layout_height="0.8dp"
                            android:background="@color/background_menu" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/background_menu"
                    android:orientation="vertical">

                    <com.jack.bookshelf.widget.views.ATESwitch
                        android:id="@+id/sw_volume_next_page"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="18dp"
                        android:textColor="@color/menu_color_default"
                        android:text="@string/volume_open_page" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="8dp"
                            android:layout_height="0.8dp"
                            android:background="@color/background_menu" />
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="0.8dp"
                            android:background="@color/btn_bg_press" />
                        <View
                            android:layout_width="8dp"
                            android:layout_height="0.8dp"
                            android:background="@color/background_menu" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_read_aloud_key"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/background_menu"
                    android:orientation="vertical">

                    <com.jack.bookshelf.widget.views.ATESwitch
                        android:id="@+id/sw_read_aloud_key"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="18dp"
                        android:textColor="@color/menu_color_default"
                        android:text="@string/aloud_volume_page" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="8dp"
                            android:layout_height="0.8dp"
                            android:background="@color/background_menu" />
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="0.8dp"
                            android:background="@color/btn_bg_press" />
                        <View
                            android:layout_width="8dp"
                            android:layout_height="0.8dp"
                            android:background="@color/background_menu" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/background_menu"
                    android:orientation="vertical">

                    <com.jack.bookshelf.widget.views.ATESwitch
                        android:id="@+id/sb_click"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="18dp"
                        android:textColor="@color/menu_color_default"
                        android:text="@string/click_open_page" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="8dp"
                            android:layout_height="0.8dp"
                            android:background="@color/background_menu" />
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="0.8dp"
                            android:background="@color/btn_bg_press" />
                        <View
                            android:layout_width="8dp"
                            android:layout_height="0.8dp"
                            android:background="@color/background_menu" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_click_all_next"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/background_menu"
                    android:orientation="vertical">

                    <com.jack.bookshelf.widget.views.ATESwitch
                        android:id="@+id/sb_click_all_next"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="18dp"
                        android:textColor="@color/menu_color_default"
                        android:text="@string/click_all_next_page" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="8dp"
                            android:layout_height="0.8dp"
                            android:background="@color/background_menu" />
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="0.8dp"
                            android:background="@color/btn_bg_press" />
                        <View
                            android:layout_width="8dp"
                            android:layout_height="0.8dp"
                            android:background="@color/background_menu" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_click_key_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/background_menu"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/sb_click_key_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="18dp"
                        android:textColor="@color/menu_color_default"
                        android:text="@string/c_page_key" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="8dp"
                            android:layout_height="0.8dp"
                            android:background="@color/background_menu" />
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="0.8dp"
                            android:background="@color/btn_bg_press" />
                        <View
                            android:layout_width="8dp"
                            android:layout_height="0.8dp"
                            android:background="@color/background_menu" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_select_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/background_menu"
                    android:orientation="vertical">

                    <com.jack.bookshelf.widget.views.ATESwitch
                        android:id="@+id/sb_select_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="18dp"
                        android:textColor="@color/menu_color_default"
                        android:text="@string/select_text" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="8dp"
                            android:layout_height="0.8dp"
                            android:background="@color/background_menu" />
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="0.8dp"
                            android:background="@color/btn_bg_press" />
                        <View
                            android:layout_width="8dp"
                            android:layout_height="0.8dp"
                            android:background="@color/background_menu" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </FrameLayout>

</LinearLayout>