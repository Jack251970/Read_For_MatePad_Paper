<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_content_change_source_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_dialog_background"
    android:orientation="vertical"
    android:padding="@dimen/content_padding">
    <!-- 标题栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/content_padding"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_title_change_source_dialog"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|start"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="完美世界"/>
    </LinearLayout>
    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_icon_height_and_width"
        android:layout_marginStart="@dimen/content_padding"
        android:layout_marginEnd="@dimen/content_padding"
        android:background="@drawable/shape_searchbar_background"
        android:imeOptions="actionSearch"
        app:iconifiedByDefault="false"
        app:searchIcon="@null"
        app:queryHint="@string/search_book_source"
        app:showDividers="none"
        app:queryBackground="@null"
        app:submitBackground="@null"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/content_padding"
        android:layout_marginBottom="@dimen/content_padding">
        <com.jack.bookshelf.widget.recycler.refresh.RefreshRecyclerView
            android:id="@+id/rf_rv_change_source"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:second_max_progress="80dp"
            app:speed="2dp" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/ibt_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:elevation="0dp"
            android:src="@drawable/ic_stop_white"
            android:visibility="invisible"
            app:elevation="0dp"
            app:fabSize="mini"
            app:layout_anchorGravity="right|bottom"
            app:pressedTranslationZ="0dp"
            tools:visibility="visible"
            tools:ignore="ContentDescription" />
    </RelativeLayout>
</LinearLayout>