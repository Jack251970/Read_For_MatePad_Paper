<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ContentDescription, UseCompoundDrawables"
    tools:context="com.jack.bookshelf.view.activity.BookInfoEditActivity">
    <View
        android:id="@+id/cl_menu_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_layout_height"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/action_bar_icon_height_and_width"
        android:layout_height="@dimen/action_bar_icon_height_and_width"
        android:layout_marginStart="@dimen/action_bar_padding_and_margin"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintLeft_toLeftOf="@id/cl_menu_top"
        app:layout_constraintTop_toTopOf="@id/cl_menu_top"
        app:layout_constraintBottom_toBottomOf="@id/cl_menu_top"/>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/action_bar_padding_and_margin"
        android:text="@string/edit_book_info"
        style="@style/PaperTextStyleActionBarText"
        app:layout_constraintLeft_toRightOf="@id/iv_back"
        app:layout_constraintTop_toTopOf="@id/cl_menu_top"
        app:layout_constraintBottom_toBottomOf="@id/cl_menu_top"/>
    <ImageView
        android:id="@+id/iv_save_book_info"
        android:layout_width="@dimen/action_bar_icon_height_and_width"
        android:layout_height="@dimen/action_bar_icon_height_and_width"
        android:layout_marginEnd="@dimen/action_bar_padding_and_margin"
        android:src="@drawable/ic_save"
        app:layout_constraintRight_toRightOf="@id/cl_menu_top"
        app:layout_constraintTop_toTopOf="@id/cl_menu_top"
        app:layout_constraintBottom_toBottomOf="@id/cl_menu_top"/>
    <!-- 书籍信息编辑 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/cl_menu_top">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!-- 封面、书名与作者 -->
            <com.jack.bookshelf.widget.cover.CoverImageView
                android:id="@+id/iv_cover"
                android:layout_width="90dp"
                android:layout_height="126dp"
                android:scaleType="centerCrop"
                android:src="@drawable/image_cover_default"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <com.jack.bookshelf.widget.text.PaperTextInputLayout
                android:id="@+id/til_book_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:hint="@string/book_name"
                app:layout_constraintLeft_toRightOf="@id/iv_cover"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/iv_cover"
                app:layout_constraintBottom_toTopOf="@id/til_book_author">
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/tie_book_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:autofillHints="false" />
            </com.jack.bookshelf.widget.text.PaperTextInputLayout>
            <com.jack.bookshelf.widget.text.PaperTextInputLayout
                android:id="@+id/til_book_author"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:hint="@string/author"
                app:layout_constraintLeft_toRightOf="@id/iv_cover"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/til_book_name"
                app:layout_constraintBottom_toBottomOf="@id/iv_cover">
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/tie_book_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true" />
            </com.jack.bookshelf.widget.text.PaperTextInputLayout>
            <!-- 封面地址 -->
            <com.jack.bookshelf.widget.text.PaperTextInputLayout
                android:id="@+id/til_cover_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:hint="@string/cover_path"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_cover">
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/tie_cover_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.jack.bookshelf.widget.text.PaperTextInputLayout>
            <!-- 封面选项 -->
            <TextView
                android:id="@+id/tv_select_cover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/select_local_image"
                style="@style/PaperTextButton"
                app:layout_constraintTop_toBottomOf="@id/til_cover_url"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView
                android:id="@+id/tv_change_cover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="@string/cover_change_source"
                style="@style/PaperTextButton"
                app:layout_constraintTop_toTopOf="@id/tv_select_cover"
                app:layout_constraintLeft_toRightOf="@id/tv_select_cover"/>
            <TextView
                android:id="@+id/tv_refresh_cover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="@string/refresh_cover"
                style="@style/PaperTextButton"
                app:layout_constraintTop_toTopOf="@id/tv_change_cover"
                app:layout_constraintLeft_toRightOf="@id/tv_change_cover"/>
            <!-- 内容简介编辑 -->
            <com.jack.bookshelf.widget.text.PaperTextInputLayout
                android:id="@+id/til_book_jj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:hint="@string/book_intro"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_select_cover">
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/tie_book_jj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.jack.bookshelf.widget.text.PaperTextInputLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>